


@{
    ViewBag.Title = "EditMediaRelease";
    Layout = null;
    var appPath = Convert.ToString(ApplicationInstance.Application["ApplicationPath"]);
}

@model MediaRelease

@Html.AntiForgeryToken()

<table cellpadding="0" cellspacing="0" border="0" class="editBannerForm">
    <tr>
        <td class="fieldname">Title</td>
        <td>
            @Html.TextAreaFor(m => m.Title, new { @class = "form_textarea", placeholder = "Type your Description here" })
            @Html.ValidationMessageFor(m => m.Title)
            @Html.HiddenFor(m => m.GUID)
        </td>
    </tr>
    <tr>
        <td class="fieldname">Date</td>
        <td>
            @Html.TextBoxFor(m => m.Date, new { placeholder = "Type your Title here", @class = "Date" })
            @Html.ValidationMessageFor(m => m.Date)
        </td>
    </tr>
    <tr>
        <td class="fieldname">Upload PDF</td>
        <td>
            <div class="upload">
                <input type="button" class="uploadBtn" value="Choose File">
                @* <input type="file" name="uploadAttach_PDF" />*@
                <input type="file" name="PdfFileName" id="PdfFileName" />
                <label>
                    @Html.TextBox("PDFFileName", (Model != null && !string.IsNullOrEmpty(Model.PdfFileName) ? Model.PdfFileName + "." + (Model != null ? Model.PdfFileExtension.Trim('.') : "") : ""), new { @type = "text", @placeholder = "No file chosen", @readonly = "true" })
                    @Html.HiddenFor(m => m.PdfFileGUID)
                    @Html.HiddenFor(m => m.PdfFileName)
                    @Html.HiddenFor(m => m.PdfFileExtension)

                </label>
            </div>
            @Html.ValidationMessage("PDFFileName")
        </td>
    </tr>
</table>
<div class="padding10"></div>
<input type="button" id="editresourcessubmitBtn"  class="submitBtn floatRight" value="Save">
@*<a  class="submitBtn floatRight" id="editresourcessubmitBtn" href="javascript:void(0)">Save</a>*@
<div class="clear padding10"></div>
                    



