<!-- Popup (delete) -->
<div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content deletealert">
            <div class="modal-header">
                <div class="title">Delete Annual Report</div>
                <div class="close" data-dismiss="modal" aria-hidden="true">Close [X]</div>
                <div class="clear"></div>
            </div>
            <div class="modal-body">
                <div class="container" style="text-align:center;">
                    <p><strong>Are you sure to delete this report?</strong></p>
                    <div class="padding10"></div>
                    <input type="button" class="submitBtn" value="Delete">
                    <div class="clear padding10"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Popup (edit) -->
<div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content editalert">
            <div class="modal-header">
                <div class="title">Edit Annual Report</div>
                <div class="close" data-dismiss="modal" aria-hidden="true">Close [X]</div>
                <div class="clear"></div>
            </div>
            <div class="modal-body">
                <div class="container">
                    <table cellpadding="0" cellspacing="0" border="0" class="editBannerForm">
                        <tr>
                            <td class="fieldname">Title</td>
                            <td><input type="text" value="Annual Report FY 2018 / 2019"></td>
                        </tr>
                        <tr>
                            <td class="fieldname">Image <span class="importantNote">(500px by 700px)</span></td>
                            <td>
                                <div class="upload">
                                    <input type="button" class="uploadBtn" value="Choose File"><input type="file" name="uploadAttach" />
                                    <label><input type="text" name="uploadFile" id="uploadFile" value="FY-2018_2019_cover.jpg" placeholder="No file chosen"></label>
                                </div>
                                <div class="imgPreview"><img src="images/annual-report/FY-2018_2019_cover.jpg"></div>
                            </td>
                        </tr>
                        <tr>
                            <td class="fieldname">Image Alt Tag</td>
                            <td><input type="text" value="Annual Report FY 2018 / 2019"></td>
                        </tr>
                        <tr>
                            <td class="fieldname">Upload PDF</td>
                            <td>
                                <div class="upload">
                                    <input type="button" class="uploadBtn" value="Choose File"><input type="file" name="uploadAttach_PDF" />
                                    <label><input type="text" name="uploadFile_PDF" id="uploadFile_PDF" value="FY-2018_2019.pdf" placeholder="No file chosen"></label>
                                </div>
                            </td>
                        </tr>
                    </table>
                    <div class="padding10"></div>
                    <input type="button" class="submitBtn floatRight" value="Save">
                    <div class="clear padding10"></div>
                </div>
            </div>
        </div>
    </div>
</div>

