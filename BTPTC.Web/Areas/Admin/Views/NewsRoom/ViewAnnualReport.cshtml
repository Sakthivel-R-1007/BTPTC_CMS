<script>
	$('input[name=uploadAttach]').change(function() {
		document.getElementById("uploadFile").value = $(this).val();
	});

	$('input[name=uploadAttach_PDF]').change(function() {
		document.getElementById("uploadFile_PDF").value = $(this).val();
	});

	$('input[name=uploadAttach_2]').change(function() {
